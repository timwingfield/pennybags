<div class="jumbotron">
  <p class="lead">View Properties owned by the Bank</p>
  <div class="row">
    <div class="span4 property-details">
      <div class="property-title well"></div>
      <h3>Select a Property</h3>
      <p><strong>Owner:</strong> </p>
      <p><strong>Rent:</strong> $000</p>
      <p><strong>Mortgage Value:</strong> $000</p>
    </div>
    <div class="span4 property-transfer"></div>
  </div>
</div>

<hr>

<div class="row property-list"></div>

<script type="text/html" id="small-card">
  <div class="small-card span2" data-id="{{= id }}">
    <div class="small-property-card {{= property_group }}"></div>
    <h4>{{= name }}</h4>
  </div>
</script>

<script type="text/template" id="property-details">
  <div class="property-title well {{= property_group }}"></div>
  <h3>{{= name }}</h3>
  <p><strong>Owner:</strong> {{= owner.name }}</p>
  <p><strong>Rent:</strong> ${{= rent }}</p>
  <p><strong>Mortgage Value:</strong> ${{= mortgage_value }}</p>
</script>

<script type="text/template" id="property-transfer">
  <ul class="players">
    <li><button type="button" class="btn btn-primary player" data-player-id="2">Sell to...</button><img src="assets/battleship.png"></li>
    <li><button type="button" class="btn btn-primary player" data-player-id="3">Sell to...</button><img src="assets/car.png"></li>
    <li><button type="button" class="btn btn-primary player" data-player-id="4">Sell to...</button><img src="assets/thimble.png"></li>
    <li><button type="button" class="btn btn-primary player" data-player-id="5">Sell to...</button><img src="assets/tophat.png"></li>
  </ul>
  <div class="span4">
    <button class="btn btn-success save"><i class="icon-ok icon-white"></i> Sell</button>
    <button class="btn btn-danger cancel"><i class="icon-remove icon-white"></i> Cancel</button>
  </div>
</script>

<script src="/assets/property/property_manager.js" type="text/javascript"></script>

<script type="text/javascript">
  $(function(){
    new PropertiesView({el: ".property-list"});
  });
</script>
